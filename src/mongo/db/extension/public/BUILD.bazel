load("//bazel:mongo_src_rules.bzl", "idl_generator", "mongo_cc_library")

package(default_visibility = ["//visibility:public"])

exports_files(
    glob([
        "*.h",
    ]),
)

mongo_cc_library(
    name = "extensions_api_public",
    srcs = [
        ":extension_error_types_gen",
        ":extension_log_gen",
    ],
    hdrs = [],
    deps = [
        ":api",
        "//src/mongo:base",
        "//src/mongo:core_headers_library",
        "//src/mongo/idl:idl_parser",
    ],
)

mongo_cc_library(
    name = "api",
    hdrs = ["api.h"],
)

idl_generator(
    name = "extension_log_gen",
    src = "extension_log.idl",
    deps = [
        "//src/mongo/db:basic_types_gen",
    ],
)

idl_generator(
    name = "extension_error_types_gen",
    src = "extension_error_types.idl",
    deps = [
        "//src/mongo/db:basic_types_gen",
    ],
)
